{% extends 'base.html.twig' %}

{% block title %}Hello ArticlesController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Posts list:</h1>
		{% for item in articles %}
			<div class="card border-primary " style="width: 100%;">
				<div class="card-body">
					<h2 class="card-title">{{item.id}}.
						{{item.title}}</h2>
					<h4 class="card-text">{{item.body}}</h4>
					<a href="{{path('DELETE')}}" class="btn btn-primary">Supprimer</a>

				</div>
			</div>
		{% endfor %}

	</div>
</div>{% endblock %}
